<% layout("/layouts/boilerplate.ejs") %>
<div class="serve" style="margin-bottom: 3rem;">
    
</div>
<div class="ourservices">
    <h2 class="servicetitle">Our Services</h2>
    <!-- <hr> -->
</div>
<div class="servicescard mb-4">
    <%- include("../includes/servicecard.ejs") %>
</div>

<hr style="width: 50%; margin: auto; color: darkgreen; height: 2px; border: 2px solid black;">

<div class="mt-4">
    <h2 style="color: black;  text-align: center;">What our Customers Say!</h2>
    
    <hr style="width: 20%; height: 2px; color: darkgreen; border: 2px solid darkgreen;  margin: auto;">
    
    <div id="carouselExampleIndicators" class="carousel carousel-dark slide">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner" style="text-align: center; height: 60vh; width: 75vh; margin: auto;">
            <!-- <div style="text-align: center; height: 20rem;"> -->
                <div class="carousel-item active mt-lg-5">
                    <div class="card border-info-subtle shadow-lg p-3 bg-info-subtle" 
                    style="width: 25rem; border: whitesmoke;">
                    <!-- shadow-lg p-3 mb-5 bg-body-tertiary rounded -->
                        <div class="card-header">
                          Shradha Khapra
                        </div>
                        <div class="card-body">
                          <blockquote class="blockquote mb-0">
                            <p style="font-size: small;">Wonderful platform, It helped me to dispose my e-waste, had great experience.</p>
                            <footer class="blockquote-footer sticky-bottom"><cite title="Source Title">shradhakhapra@gmail.com</cite></footer>
                          </blockquote>
                        </div>
                    </div>
                </div>
                <% for(review of reviews){ %>
                <div class="carousel-item mt-lg-5 ">
                    <div class="card border-info-subtle shadow-lg p-3 bg-info-subtle rounded" style="width: 25rem; border: whitesmoke;">
                        <div class="card-header">
                            <%= review.name %>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                            <p style="font-size: small;"><%= review.message %></p>
                            <footer class="blockquote-footer"><cite title="Source Title"><%= review.email %></cite></footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
                <% } %>
            <!-- </div> -->
        </div>
        <button class="carousel-control-prev" type="button" style="margin-left: 10rem;" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"  aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" style="margin-right: 10rem;" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
</div>